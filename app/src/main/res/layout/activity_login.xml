<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eb8265"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="45sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="60dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.2"
                    android:background="#dfdede"
                    android:padding="10dp"
                    android:textSize="@dimen/second_font" />

                <EditText
                    android:id="@+id/login_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="输入手机号"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColor="#646464"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/second_font" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.2"
                    android:background="#dfdede"
                    android:padding="10dp"
                    android:textSize="@dimen/second_font" />

                <TextView
                    android:id="@+id/login_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/getcode_btn"
                    android:clickable="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="5dp"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/second_font" />

                <EditText
                    android:id="@+id/login_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/login_getcode"
                    android:background="@null"
                    android:hint="输入验证码"
                    android:padding="10dp"
                    android:textColor="#646464"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/second_font" />

            </RelativeLayout>


            <TextView
                android:id="@+id/login_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/win_btn"
                android:clickable="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/first_font" />
        </LinearLayout>

        <include
            android:id="@+id/login_pro"
            layout="@layout/pro"
            android:visibility="gone" />
    </RelativeLayout>
</ScrollView>