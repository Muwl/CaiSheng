<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        android:id="@+id/main_title"
        layout="@layout/activity_title" />

    <com.mu.caisheng.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_below="@+id/main_title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp">

                    <ImageView
                        android:id="@+id/main_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/main_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/text_bg"
                        android:paddingBottom="4dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:text="剩余时间：56:44秒"
                        android:textColor="@color/white"
                        android:textSize="@dimen/second_font" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/main_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="品名"
                    android:textColor="#040404"
                    android:textSize="@dimen/second_font" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价值："
                        android:textColor="#6b6b6b"
                        android:textSize="@dimen/second_font" />

                    <TextView
                        android:id="@+id/main_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$5"
                        android:textColor="#d02c06"
                        android:textSize="@dimen/second_font" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="免费提供："
                        android:textColor="#6b6b6b"
                        android:textSize="@dimen/second_font" />

                    <TextView
                        android:id="@+id/main_freenum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50份"
                        android:textColor="#d02c06"
                        android:textSize="@dimen/first_font" />

                </LinearLayout>

                <TextView
                    android:id="@+id/main_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="至详情页面寻找参考价区间提高中奖率"
                    android:textColor="#6b6b6b"
                    android:textSize="@dimen/second_font" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="8dp"
                    android:gravity="clip_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_guess"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/cricle_btn"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="猜"
                        android:textColor="#d02c06"
                        android:textSize="@dimen/title_font" />

                    <EditText
                        android:id="@+id/main_input_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@id/main_guess"
                        android:background="@drawable/price_bg"
                        android:gravity="center"
                        android:hint="填写价格"
                        android:padding="10dp"
                        android:textColor="#6b6b6b"
                        android:textColorHint="#969696"
                        android:textSize="@dimen/second_font" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/main_comnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="已有308人出价"
                    android:textColor="#6b6b6b"
                    android:textSize="@dimen/second_font" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="品牌热卖"
                    android:textColor="#6b6b6b"
                    android:textSize="@dimen/second_font" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/divider" />

                <com.mu.caisheng.view.HorizontalListView
                    android:id="@+id/main_list"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_margin="2dp" />

            </LinearLayout>


        </RelativeLayout>

    </com.mu.caisheng.view.MyScrollView>

</RelativeLayout>
